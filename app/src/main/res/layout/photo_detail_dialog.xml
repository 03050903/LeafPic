<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:id="@+id/photo_details_card"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_photo_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/header_photo_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--
                    <ImageView
                        android:id="@+id/photo_details_preview"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        />
                    -->
                    <TextView
                        android:id="@+id/media_details_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/details"
                        android:padding="24dp"
                        android:textColor="@color/md_dark_primary_text"
                        android:background="@color/md_red_500"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                </RelativeLayout>

                <View
                    android:id="@+id/photo_details_card_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/header_photo_details"
                    />

                <LinearLayout
                    android:id="@+id/ll_detail_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical"
                    android:layout_below="@id/header_photo_details"
                    >

                    <!--PATH-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/LL_PATH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/Path"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/path"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Photo_Path"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <!--TYPE-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/Type"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/type"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Photo_Type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                    <!--Resolution-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_Resolution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/Resolution"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/resolution"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Photo_Resolution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                    <!--Size-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_Size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/Size"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/size"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Photo_Size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                    <!--DATE TAKEN-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:id="@+id/Date"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/date"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Photo_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--EXIF-->

                <LinearLayout
                    android:id="@+id/ll_detail_dialog_EXIF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_below="@id/ll_detail_dialog"
                    >
                    <!--Device-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_Device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/Device"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/camera"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Device_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <!--EXIF-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_EXIF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/EXIF"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/exif"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/EXIF_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                    <!--LOCATION-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >
                        <TextView
                            android:id="@+id/Location"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/location"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/Location_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--MAP-->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_below="@id/ll_detail_dialog_EXIF"
                    >
                    <ImageView
                        android:id="@+id/img_Map"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>